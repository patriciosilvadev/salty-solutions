{
  "name": "fishing-app-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@graphql-codegen/typescript-urql": "^1.4.0",
    "date-fns": "^1.30.1",
    "date-fns-timezone": "^0.1.4",
    "graphql": "^14.4.2",
    "lodash": "^4.17.11",
    "react-date-picker": "^7.8.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.4.0",
    "@graphql-codegen/typescript": "1.4.0",
    "@graphql-codegen/typescript-operations": "1.4.0",
    "@graphql-codegen/typescript-react-apollo": "1.4.0",
    "@graphql-codegen/typescript-resolvers": "1.4.0",
    "@types/lodash": "^4.14.135",
    "nodemon": "^1.19.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "build": "yarn build:server",
    "dev": "yarn dev:server & yarn dev:client",
    "gql-gen": "graphql-codegen --config codegen.yml",
    "dev:serverless": "cd server && sls offline start",
    "dev:server": "LOCAL_DEV=true nodemon --watch 'server/src/**/*' -e ts,tsx --exec ts-node ./server/src/server.ts",
    "dev:client": "yarn --cwd ./client start",
    "deploy:server": "cd server && sls deploy --stage prod"
  }
}
